	>

definition
	EVALUATION[at0000] matches {	-- CURB-65 assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Risk assessment
						value matches {
							0|[local::at0005], 	-- Low risk group
							1|[local::at0006], 	-- Moderate risk group
							2|[local::at0007], 	-- Severe risk group
							3|[local::at0008]  	-- Highest risk group
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Recommendation
						value matches {
							0|[local::at0009], 	-- Consider home treatment
							1|[local::at0010], 	-- Consider hospital care
							2|[local::at0011]  	-- Urgent hospital admission
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- 30-day mortality
						value matches {
							0|[local::at0012], 	-- <3 %
							1|[local::at0013], 	-- 9 %
							2|[local::at0014]  	-- 15-40 %
						}
					}
				}
			}
		}
	}

