concept
	[at0000]	-- Perc (Pulmonary Embolism Rule out Criteria)
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Isabelle Jensen">
		["email"] = <"isabelle.jensen@cambio.se">
