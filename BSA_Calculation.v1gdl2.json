{
  "gdl_version": "2.0",
  "id": "BSA_Calculation.v1",
  "concept": "gt0015",
  "language": {
    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "date": "2013-03-11",
      "name": "Author",
      "organisation": "CDS",
      "email": "author@cambio.se"
    },
    "lifecycle_state": "Author draft",
    "details": {
      "en": {
        "id": "en",
        "purpose": "To calculate the body surface area based on the Mosteller formula.",
        "keywords": [
          "body surface area",
          "BSA",
          "Mosteller formula"
        ],
        "use": "Use for calculating the BSA based on the Mosteller formula ( Height(cm) x Weight(kg) / 3600 )Â½",
        "misuse": "Do not use for calculating  BSA based on other formulas.",
        "copyright": "cds"
      }
    }
  },
  "definition": {
    "pre_conditions": [
      "$gt0005.unit=='kg'",
      "$gt0006.unit=='cm'"
    ],
    "data_bindings": {
      "gt0019": {
        "id": "gt0019",
        "model_id": "openEHR-EHR-OBSERVATION.body_mass_index.v2",
        "type": "OUTPUT",
        "elements": {
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      },
      "gt0016": {
        "id": "gt0016",
        "model_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "template_id": "body_weight_template.v1",
        "type": "INPUT",
        "elements": {
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0002]/events[at0003]/data[at0001]/items[at0004]"
          }
        }
      },
      "gt0017": {
        "id": "gt0017",
        "model_id": "openEHR-EHR-OBSERVATION.height.v2",
        "type": "INPUT",
        "elements": {
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      }
    },
    "rules": {
      "gt0009": {
        "id": "gt0009",
        "when": [
          "$gt0005.unit=='kg'",
          "$gt0006.unit=='cm'"
        ],
        "then": [
          "$gt0013.magnitude=($gt0005.magnitude/(($gt0006.magnitude/100)^2))",
          "$gt0013.precision=2",
          "$gt0013.unit='kg/m2'"
        ],
        "priority": 3
      }
    }
  },
